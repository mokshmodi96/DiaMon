<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_userpic"
        android:layout_marginTop="10dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_preson_round"/>
<TextView
    android:id="@+id/tv_cname"
    android:textColor="@android:color/black"
    android:text="Client Name"
    android:layout_toRightOf="@id/iv_userpic"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="10dp"
    android:textSize="14sp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
<TextView
    android:id="@+id/tv_cmobile"
    android:layout_below="@+id/tv_cname"
    android:layout_toRightOf="@+id/iv_userpic"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="10dp"
    android:text="Mobile No"
    android:textSize="14sp"
    android:textColor="@android:color/black"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_cemail"
android:layout_toRightOf="@+id/iv_userpic"
android:textColor="@android:color/black"
        android:textSize="14sp"
        android:text="Emial"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tv_cmobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/bt_addsub"
        android:text="Add Prescription"
        android:textSize="12sp"
        android:padding="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@android:color/black"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_cemail"
        android:background="@drawable/but_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rc_subcription"
        android:layout_marginTop="10dp"
        android:background="@drawable/but_back"
        android:layout_below="@+id/iv_userpic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
</RelativeLayout>
</ScrollView>